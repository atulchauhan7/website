<section class="section image-banners" data-section-id="{{ section.id }}">
<div class="container">
<div class="image-banners__grid image-banners__grid--{{ section.blocks.size }}">
{% for block in section.blocks %}
<a href="{{ block.settings.link }}" class="image-banner" data-animate="fade-up" {{ block.shopify_attributes }}>
<div class="image-banner__media">
{% if block.settings.image != blank %}
<img
src="{{ block.settings.image | image_url: width: 700 }}"
srcset="{{ block.settings.image | image_url: width: 400 }} 400w,
{{ block.settings.image | image_url: width: 700 }} 700w,
{{ block.settings.image | image_url: width: 1000 }} 1000w"
sizes="(max-width: 768px) 100vw, {% if section.blocks.size == 1 %}100vw{% elsif section.blocks.size == 2 %}50vw{% else %}33vw{% endif %}"
alt="{{ block.settings.heading | escape }}"
loading="lazy"
decoding="async"
width="1000"
height="600"
>
{% else %}
{{ 'collection-' | append: forloop.index | placeholder_svg_tag: 'placeholder-svg' }}
{% endif %}
</div>
<div class="image-banner__overlay"></div>
<div class="image-banner__content">
{% if block.settings.heading != blank %}
<h3 class="image-banner__title">{{ block.settings.heading }}</h3>
{% endif %}
{% if block.settings.button_label != blank %}
<span class="image-banner__btn">{{ block.settings.button_label }}</span>
{% endif %}
</div>
</a>
{% endfor %}
</div>
</div>
</section>

{% schema %}
{"name":"Image Banners","max_blocks":4,"settings":[],"blocks":[{"type":"banner","name":"Banner","settings":[{"type":"image_picker","id":"image","label":"Image","info":"1000x600px recommended"},{"type":"text","id":"heading","label":"Heading","default":"Shop Collection"},{"type":"text","id":"button_label","label":"Button label","default":"Shop Now"},{"type":"url","id":"link","label":"Link"}]}],"presets":[{"name":"Image Banners","blocks":[{"type":"banner","settings":{"heading":"Printed Shirts"}},{"type":"banner","settings":{"heading":"Plain Shirts"}}]}]}
{% endschema %}
