<section class="section" data-section-id="{{ section.id }}">
<div class="container">
<div class="section-header" data-animate="fade-up">
{% if section.settings.subtitle != blank %}
<div class="section-header__subtitle">{{ section.settings.subtitle }}</div>
{% endif %}
<h2 class="section-header__title">{{ section.settings.title }}</h2>
</div>

<div class="grid grid--{{ section.blocks.size | at_most: 4 }}" data-animate-stagger>
{% for block in section.blocks %}
<a href="{{ block.settings.link }}" class="collection-card tilt-effect" data-animate="fade-up" {{ block.shopify_attributes }}>
{% if block.settings.image != blank %}
<img 
class="collection-card__image" 
src="{{ block.settings.image | image_url: width: 800 }}" 
alt="{{ block.settings.title }}"
loading="lazy"
>
{% else %}
{{ 'collection-' | append: forloop.index | placeholder_svg_tag: 'collection-card__image placeholder-svg' }}
{% endif %}
<div class="collection-card__overlay">
<h3 class="collection-card__title">{{ block.settings.title }}</h3>
<span class="collection-card__count">{{ block.settings.subtitle }}</span>
</div>
</a>
{% endfor %}
</div>
</div>
</section>

