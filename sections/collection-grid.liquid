<section class="cat-panel" data-section-id="{{ section.id }}">
<div class="container">
<div class="cat-panel__header" data-animate="fade-up">
{% if section.settings.subtitle != blank %}
<span class="cat-panel__label">{{ section.settings.subtitle }}</span>
{% endif %}
<h2 class="cat-panel__heading">{{ section.settings.title }}</h2>
</div>
</div>

<div class="container container--wide">
<div class="cat-panel__grid cat-panel__grid--{{ section.blocks.size | at_most: 6 }}" data-animate-stagger>
{% for block in section.blocks %}
<a href="{{ block.settings.link }}" class="cat-card" data-animate="fade-up" {{ block.shopify_attributes }}>
<div class="cat-card__media">
{% if block.settings.image != blank %}
<img
src="{{ block.settings.image | image_url: width: 700 }}"
srcset="{{ block.settings.image | image_url: width: 400 }} 400w,
{{ block.settings.image | image_url: width: 700 }} 700w,
{{ block.settings.image | image_url: width: 1000 }} 1000w"
sizes="(max-width: 768px) 100vw, 50vw"
alt="{{ block.settings.title | escape }}"
loading="lazy"
decoding="async"
width="1000"
height="1200"
>
{% else %}
{{ 'collection-' | append: forloop.index | placeholder_svg_tag: 'placeholder-svg' }}
{% endif %}
</div>
<div class="cat-card__overlay"></div>
<div class="cat-card__content">
<span class="cat-card__num">{% if forloop.index < 10 %}0{{ forloop.index }}{% else %}{{ forloop.index }}{% endif %}</span>
<h3 class="cat-card__name">{{ block.settings.title }}</h3>
<div class="cat-card__cta">
<span>Explore</span>
<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
<path d="M5 12h14M12 5l7 7-7 7"/>
</svg>
</div>
</div>
<div class="cat-card__accent"></div>
</a>
{% endfor %}
</div>
</div>
</section>

{% schema %}
{"name":"Collection Grid","max_blocks":6,"settings":[{"type":"text","id":"subtitle","label":"Subtitle","default":"Browse"},{"type":"text","id":"title","label":"Title","default":"Shop by Category"}],"blocks":[{"type":"collection","name":"Collection","settings":[{"type":"image_picker","id":"image","label":"Image"},{"type":"text","id":"title","label":"Title","default":"Collection"},{"type":"text","id":"subtitle","label":"Subtitle","default":"Shop Now &rarr;"},{"type":"url","id":"link","label":"Link"}]}],"presets":[{"name":"Collection Grid","blocks":[{"type":"collection","settings":{"title":"New Arrivals","subtitle":"Shop Now &rarr;"}},{"type":"collection","settings":{"title":"Best Sellers","subtitle":"Shop Now &rarr;"}},{"type":"collection","settings":{"title":"Sale","subtitle":"Shop Now &rarr;"}}]}]}
{% endschema %}