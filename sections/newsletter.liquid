<section class="section newsletter" data-section-id="{{ section.id }}">
<div class="container container--narrow">
<div class="section-header" data-animate="fade-up">
{% if section.settings.subtitle != blank %}
<div class="section-header__subtitle">{{ section.settings.subtitle }}</div>
{% endif %}
<h2 class="section-header__title">{{ section.settings.title }}</h2>
{% if section.settings.description != blank %}
<p class="section-header__description">{{ section.settings.description }}</p>
{% endif %}
</div>

<div data-animate="fade-up" data-animate-delay="200">
{% form 'customer', class: 'newsletter__form' %}
<input type="hidden" name="contact[tags]" value="newsletter">
<input 
type="email" 
name="contact[email]" 
class="newsletter__input" 
placeholder="{{ section.settings.placeholder }}" 
required
autocomplete="email"
aria-label="Email address"
>
<button type="submit" class="newsletter__submit">
{{ section.settings.button_label }}
</button>
{% endform %}
</div>
</div>
</section>

{% schema %}
{"name":"Newsletter","settings":[{"type":"text","id":"subtitle","label":"Subtitle","default":"Stay Connected"},{"type":"text","id":"title","label":"Title","default":"Join the Luxe Community"},{"type":"textarea","id":"description","label":"Description","default":"Subscribe for exclusive access to new arrivals, special offers, and style inspiration."},{"type":"text","id":"placeholder","label":"Input placeholder","default":"Enter your email address"},{"type":"text","id":"button_label","label":"Button label","default":"Subscribe"}],"presets":[{"name":"Newsletter"}]}
{% endschema %}