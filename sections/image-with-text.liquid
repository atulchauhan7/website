<section class="section--no-padding image-text {% if section.settings.reverse %}image-text--reversed{% endif %}" data-section-id="{{ section.id }}">
<div class="image-text__media" data-animate="fade-in">
{% if section.settings.image != blank %}
<img 
src="{{ section.settings.image | image_url: width: 1200 }}" 
alt="{{ section.settings.heading }}"
loading="lazy"
>
{% else %}
{{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
{% endif %}
</div>

<div class="image-text__content">
{% if section.settings.subtitle != blank %}
<div class="image-text__subtitle" data-animate="fade-up">{{ section.settings.subtitle }}</div>
{% endif %}
<h2 class="image-text__heading" data-animate="fade-up" data-animate-delay="200">{{ section.settings.heading }}</h2>
<div class="image-text__description" data-animate="fade-up" data-animate-delay="400">{{ section.settings.text }}</div>
{% if section.settings.button_label != blank %}
<div data-animate="fade-up" data-animate-delay="600">
<a href="{{ section.settings.button_link }}" class="btn btn--primary">
{{ section.settings.button_label }}
<svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
</a>
</div>
{% endif %}
</div>
</section>

{% schema %}
{"name":"Image with Text","settings":[{"type":"image_picker","id":"image","label":"Image"},{"type":"text","id":"subtitle","label":"Subtitle","default":"Our Story"},{"type":"text","id":"heading","label":"Heading","default":"Everyday Elegance"},{"type":"richtext","id":"text","label":"Text","default":"\u003cp\u003eEffortlessly stylish and endlessly versatile, our collection is perfect for any occasion. Dress them up or down for a timeless, classic look.\u003c/p\u003e"},{"type":"text","id":"button_label","label":"Button label","default":"Shop Collection"},{"type":"url","id":"button_link","label":"Button link"},{"type":"checkbox","id":"reverse","label":"Reverse layout","default":false}],"presets":[{"name":"Image with Text"}]}
{% endschema %}