{"name":"Footer","max_blocks":3,"settings":[{"type":"textarea","id":"about_text","label":"About text","default":"We curate premium products for those who appreciate quality, craftsmanship, and timeless design."}],"blocks":[{"type":"menu","name":"Menu Column","settings":[{"type":"text","id":"heading","label":"Heading","default":"Quick Links"},{"type":"link_list","id":"menu","label":"Menu","default":"footer"}]}],"default":{"blocks":[{"type":"menu","settings":{"heading":"Quick Links"}},{"type":"menu","settings":{"heading":"Customer Care"}},{"type":"menu","settings":{"heading":"Legal"}}]}}
{% endschema %}