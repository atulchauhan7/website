{"name":"Hero Slider","settings":[{"type":"image_picker","id":"image","label":"Fallback background image","info":"Used when no slideshow blocks are added. 2000x1000px recommended."},{"type":"text","id":"subtitle","label":"Subtitle","default":"New Collection 2026"},{"type":"text","id":"heading","label":"Heading","default":"Redefine Your Style"},{"type":"textarea","id":"description","label":"Description","default":"Discover our curated collection of premium essentials designed for the modern lifestyle."},{"type":"text","id":"button_label","label":"Button label","default":"Shop Now"},{"type":"url","id":"button_link","label":"Button link"},{"type":"text","id":"button_label_2","label":"Second button label"},{"type":"url","id":"button_link_2","label":"Second button link"},{"type":"range","id":"slideshow_speed","label":"Slideshow speed (seconds)","min":3,"max":10,"step":1,"default":6,"info":"Only applies when multiple slides are added"},{"type":"checkbox","id":"show_scroll_indicator","label":"Show scroll indicator","default":false}],"blocks":[{"type":"slide","name":"Slide","settings":[{"type":"image_picker","id":"image","label":"Image","info":"2000x1000px recommended"},{"type":"url","id":"video","label":"Video URL (mp4)","info":"Optional â€” overrides image if provided"},{"type":"text","id":"subtitle","label":"Slide subtitle"},{"type":"text","id":"heading","label":"Slide heading"}]}],"presets":[{"name":"Hero Slider","blocks":[{"type":"slide"}]}]}
{% endschema %}