<div class="page-template">
<div class="container container--narrow">
<div class="page-header" data-animate="fade-up">
<h1>Your Addresses</h1>
</div>

<div data-animate="fade-up">
<a href="#" onclick="document.getElementById('add-address').style.display='block'; return false;" class="btn btn--primary" style="margin-bottom: 2rem;">Add New Address</a>

<div id="add-address" style="display: none; padding: 2rem; border: 1px solid var(--color-border); border-radius: var(--border-radius); margin-bottom: 2rem;">
{% form 'customer_address', customer.new_address %}
<h3 style="margin-bottom: 1.5rem;">New Address</h3>
<div class="grid grid--2">
<div class="form-group">
<label class="form-label">First Name</label>
<input class="form-input" type="text" name="address[first_name]">
</div>
<div class="form-group">
<label class="form-label">Last Name</label>
<input class="form-input" type="text" name="address[last_name]">
</div>
</div>
<div class="form-group">
<label class="form-label">Address</label>
<input class="form-input" type="text" name="address[address1]">
</div>
<div class="form-group">
<label class="form-label">Apartment, Suite, etc.</label>
<input class="form-input" type="text" name="address[address2]">
</div>
<div class="grid grid--2">
<div class="form-group">
<label class="form-label">City</label>
<input class="form-input" type="text" name="address[city]">
</div>
<div class="form-group">
<label class="form-label">Zip / Postal Code</label>
<input class="form-input" type="text" name="address[zip]">
</div>
</div>
<div class="form-group">
<label class="form-label">Country</label>
<select class="form-input" name="address[country]">{{ all_country_option_tags }}</select>
</div>
<div class="form-group">
<label class="form-label">Province / State</label>
<select class="form-input" name="address[province]"></select>
</div>
<div class="form-group">
<label class="form-label">Phone</label>
<input class="form-input" type="tel" name="address[phone]">
</div>
<div style="display: flex; gap: 1rem;">
<button type="submit" class="btn btn--primary ripple-effect">Save Address</button>
<button type="button" onclick="document.getElementById('add-address').style.display='none';" class="btn btn--secondary">Cancel</button>
</div>
{% endform %}
</div>

{% for address in customer.addresses %}
<div style="padding: 1.5rem; border: 1px solid var(--color-border); border-radius: var(--border-radius); margin-bottom: 1rem;">
{% if address == customer.default_address %}
<span style="font-size: 0.7rem; text-transform: uppercase; letter-spacing: 0.1em; color: var(--color-accent); font-weight: 600;">Default</span>
{% endif %}
<p style="font-weight: 500;">{{ address.first_name }} {{ address.last_name }}</p>
<p style="font-size: 0.9rem; color: var(--color-text-muted);">
{{ address.address1 }}{% if address.address2 != blank %}, {{ address.address2 }}{% endif %}<br>
{{ address.city }}, {{ address.province }} {{ address.zip }}<br>
{{ address.country }}
</p>
</div>
{% endfor %}

<div style="margin-top: 2rem;">
<a href="/account" class="btn btn--secondary">â† Back to Account</a>
</div>
</div>
</div>
</div>