<div class="page-template">
<div class="container container--narrow">
<div class="page-header" data-animate="fade-up">
<h1>Order {{ order.name }}</h1>
<p class="text-muted">Placed on {{ order.created_at | date: '%B %d, %Y' }}</p>
</div>
<div data-animate="fade-up">
<div class="cart-items">
{% for line_item in order.line_items %}
<div class="cart-item">
<div class="cart-item__info">
<a href="{{ line_item.product.url }}" class="cart-item__title">{{ line_item.title }}</a>
{% if line_item.fulfillment %}
<div class="cart-item__variant">
{{ line_item.fulfillment.tracking_company }}
{% if line_item.fulfillment.tracking_url %}
- <a href="{{ line_item.fulfillment.tracking_url }}" target="_blank" rel="noopener" class="text-accent">Track</a>
{% endif %}
</div>
{% endif %}
</div>
<div class="cart-item__variant">&times;{{ line_item.quantity }}</div>
<div class="cart-item__total">{{ line_item.final_line_price | money }}</div>
</div>
{% endfor %}
</div>
<div class="order-totals">
<p>Subtotal: {{ order.line_items_subtotal_price | money }}</p>
{% for shipping_method in order.shipping_methods %}
<p>Shipping ({{ shipping_method.title }}): {{ shipping_method.price | money }}</p>
{% endfor %}
{% for tax_line in order.tax_lines %}
<p>Tax ({{ tax_line.title }}): {{ tax_line.price | money }}</p>
{% endfor %}
<p class="order-totals__grand">Total: {{ order.total_price | money }}</p>
</div>
<div class="mt-3">
<a href="{{ routes.account_url }}" class="btn btn--secondary">&larr; Back to Account</a>
</div>
</div>
</div>
</div>