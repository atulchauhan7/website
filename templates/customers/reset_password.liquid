<div class="page-template">
<div class="container container--narrow">
<div class="page-header" data-animate="fade-up">
<h1>Reset Password</h1>
</div>
<div data-animate="fade-up" data-animate-delay="200">
<p class="text-muted text-center" style="margin-bottom: 2rem;">Enter your email address and we'll send you a link to reset your password.</p>
{% form 'recover_customer_password' %}
<div class="form-group">
<label class="form-label" for="recover-email">Email</label>
<input class="form-input" type="email" id="recover-email" name="email" required autocomplete="email">
</div>
<button type="submit" class="btn btn--primary btn--full ripple-effect">Send Reset Link</button>
<p style="text-align: center; margin-top: 1.5rem;">
<a href="/account/login" style="font-size: 0.85rem; color: var(--color-text-muted);">â† Back to Login</a>
</p>
{% endform %}
</div>
</div>
