<div class="page-template">
<div class="container">
<div class="page-header" data-animate="fade-up">
<h1>{{ collection_list.title | default: 'Collections' }}</h1>
</div>

<div class="grid grid--3" data-animate-stagger>
{% for collection in collections %}
{% unless collection.handle == 'frontpage' %}
<a href="{{ collection.url }}" class="collection-card tilt-effect" data-animate="fade-up">
{% if collection.image != blank %}
<img class="collection-card__image" src="{{ collection.image | image_url: width: 800 }}" alt="{{ collection.title | escape }}" loading="lazy">
{% else %}
{{ 'collection-1' | placeholder_svg_tag: 'collection-card__image placeholder-svg' }}
{% endif %}
<div class="collection-card__overlay">
<h3 class="collection-card__title">{{ collection.title }}</h3>
<span class="collection-card__count">{{ collection.products_count }} products</span>
</div>
</a>
{% endunless %}
{% endfor %}
</div>
</div>
</div>