<div class="page-template">
<div class="container">
<div class="page-header" data-animate="fade-up">
<h1>Your Cart</h1>
</div>

{% if cart.item_count > 0 %}
<div data-animate="fade-up">
<table style="width: 100%; border-collapse: collapse;">
<thead>
<tr style="border-bottom: 2px solid var(--color-border); text-align: left;">
<th style="padding: 1rem 0; font-size: 0.8rem; text-transform: uppercase; letter-spacing: 0.1em;">Product</th>
<th style="padding: 1rem 0; font-size: 0.8rem; text-transform: uppercase; letter-spacing: 0.1em;">Price</th>
<th style="padding: 1rem 0; font-size: 0.8rem; text-transform: uppercase; letter-spacing: 0.1em;">Quantity</th>
<th style="padding: 1rem 0; font-size: 0.8rem; text-transform: uppercase; letter-spacing: 0.1em; text-align: right;">Total</th>
</tr>
</thead>
<tbody>
{% for item in cart.items %}
<tr style="border-bottom: 1px solid var(--color-border);">
<td style="padding: 1.5rem 0;">
<div style="display: flex; align-items: center; gap: 1rem;">
<div style="width: 80px; height: 100px; border-radius: 4px; overflow: hidden; flex-shrink: 0;">
{% if item.image != blank %}
<img src="{{ item.image | image_url: width: 200 }}" alt="{{ item.title | escape }}" style="width: 100%; height: 100%; object-fit: cover;">
{% endif %}
</div>
<div>
<a href="{{ item.url }}" style="font-weight: 500;">{{ item.product.title }}</a>
{% if item.variant.title != 'Default Title' %}
<div style="font-size: 0.85rem; color: var(--color-text-muted);">{{ item.variant.title }}</div>
{% endif %}
</div>
</div>
</td>
<td style="padding: 1.5rem 0;">{{ item.final_price | money }}</td>
<td style="padding: 1.5rem 0;">
<div class="quantity-selector">
<button type="button" data-qty-minus>âˆ’</button>
<input type="number" value="{{ item.quantity }}" min="1" aria-label="Quantity">
<button type="button" data-qty-plus>+</button>
</div>
</td>
<td style="padding: 1.5rem 0; text-align: right; font-weight: 600;">{{ item.final_line_price | money }}</td>
</tr>
{% endfor %}
</tbody>
</table>

<div style="display: flex; justify-content: flex-end; padding: 2rem 0;">
<div style="text-align: right;">
<div style="font-size: 1.2rem; margin-bottom: 0.5rem;">
<strong>Subtotal:</strong> {{ cart.total_price | money }}
</div>
<p style="font-size: 0.85rem; color: var(--color-text-muted); margin-bottom: 1.5rem;">Shipping & taxes calculated at checkout</p>
<a href="/checkout" class="btn btn--primary btn--large ripple-effect">Proceed to Checkout</a>
</div>
</div>
</div>
{% else %}
<div class="page-404" style="min-height: 40vh;">
<div>
<svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" style="margin: 0 auto 1.5rem; display: block; opacity: 0.3;">
<path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/>
<line x1="3" y1="6" x2="21" y2="6"/>
<path d="M16 10a4 4 0 0 1-8 0"/>
</svg>
<h2>Your cart is empty</h2>
<p class="page-404__text">Looks like you haven't added anything to your cart yet.</p>
<a href="/collections/all" class="btn btn--primary ripple-effect">Continue Shopping</a>
</div>
</div>
{% endif %}
</div>
</div>