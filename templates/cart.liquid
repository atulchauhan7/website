<div class="page-template">
<div class="container">
<div class="page-header" data-animate="fade-up">
<h1>{{ 'cart.general.title' | t }}</h1>
</div>
{% if cart.item_count > 0 %}
<div data-animate="fade-up">
<div class="cart-head"><span>Product</span></div>
<div class="cart-items">
{% for item in cart.items %}
<div class="cart-item">
<div class="cart-item__img">
{% if item.image != blank %}
<img src="{{ item.image | image_url: width: 200 }}" alt="{{ item.title | escape }}" loading="lazy" width="80" height="100">
{% endif %}
</div>
<div class="cart-item__info">
<a href="{{ item.url }}" class="cart-item__title">{{ item.product.title }}</a>
{% if item.variant.title != 'Default Title' %}
<div class="cart-item__variant">{{ item.variant.title }}</div>
{% endif %}
<div class="cart-item__price">{{ item.final_price | money }}</div>
<div class="quantity-selector mt-1">
<button type="button" data-qty-minus>&#8722;</button>
<input type="number" value="{{ item.quantity }}" min="1" aria-label="Quantity">
<button type="button" data-qty-plus>+</button>
</div>
</div>
<div class="cart-item__total">{{ item.final_line_price | money }}</div>
</div>
{% endfor %}
</div>
<div class="cart-summary">
<div class="cart-summary__inner">
<div class="cart-summary__total"><strong>Subtotal:</strong> {{ cart.total_price | money }}</div>
<p class="cart-summary__note">Shipping &amp; taxes calculated at checkout</p>
<a href="/checkout" class="btn btn--primary btn--large">Proceed to Checkout</a>
</div>
</div>
</div>
{% else %}
<div class="page-404">
<div>
<svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" aria-hidden="true"><path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/><line x1="3" y1="6" x2="21" y2="6"/><path d="M16 10a4 4 0 0 1-8 0"/></svg>
<h2>Your cart is empty</h2>
<p class="page-404__text">Looks like you haven't added anything to your cart yet.</p>
<a href="/collections/all" class="btn btn--primary">Continue Shopping</a>
</div>
</div>
{% endif %}
</div>
</div>