<div class="page-template">
<div class="container">
<div class="page-header" data-animate="fade-up">
<h1>{{ blog.title }}</h1>
</div>

{% paginate blog.articles by 9 %}
<div class="grid grid--3" data-animate-stagger>
{% for article in blog.articles %}
<article class="blog-card" data-animate="fade-up">
{% if article.image != blank %}
<a href="{{ article.url }}" class="blog-card__image">
<img src="{{ article.image | image_url: width: 800 }}" alt="{{ article.image.alt | escape }}" loading="lazy">
</a>
{% endif %}
<div class="blog-card__content">
<div class="blog-card__date">{{ article.published_at | date: '%B %d, %Y' }}</div>
<a href="{{ article.url }}">
<h3 class="blog-card__title">{{ article.title }}</h3>
</a>
<p class="blog-card__excerpt">{{ article.excerpt_or_content | strip_html | truncate: 150 }}</p>
</div>
</article>
{% endfor %}
</div>

{% if paginate.pages > 1 %}
{% render 'pagination', paginate: paginate %}
{% endif %}
{% endpaginate %}
</div>
</div>