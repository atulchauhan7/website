<div class="collection-page">
<div class="container">
<div class="collection-page__header" data-animate="fade-up">
<h1>{{ collection.title }}</h1>
{% if collection.description != blank %}
<p>{{ collection.description }}</p>
{% endif %}
</div>
<div class="collection-toolbar">
<span class="collection-toolbar__count">{{ collection.products_count }} products</span>
<div class="collection-toolbar__sort">
<select id="sort-by" data-sort-collection>
{% for option in collection.sort_options %}
<option value="{{ option.url }}" {% if option.value == collection.sort_by %}selected{% endif %}>{{ option.name }}</option>
{% endfor %}
</select>
</div>
</div>
{% paginate collection.products by 12 %}
<div class="grid grid--4" data-animate-stagger>
{% for product in collection.products %}
<div data-animate="fade-up">
{% render 'product-card', product: product %}
</div>
{% endfor %}
</div>
{% if paginate.pages > 1 %}
{% render 'pagination', paginate: paginate %}
{% endif %}
{% endpaginate %}
</div>
</div>