<div class="page-template">
<div class="container">
<div class="page-header" data-animate="fade-up">
<h1>Gift Card</h1>
</div>
<div class="page-content text-center" data-animate="fade-up" style="max-width:480px">
<div class="gift-wrap">
{% if gift_card.image %}
<img src="{{ gift_card.image | image_url: width: 400 }}" alt="Gift card" loading="lazy" width="300" height="190">
{% endif %}
<h2 class="mb-1">{{ gift_card.balance | money }}</h2>
{% if gift_card.enabled %}
<p class="gift-status gift-status--on">Active</p>
{% else %}
<p class="gift-status gift-status--off">Disabled</p>
{% endif %}
<div class="gift-code">{{ gift_card.code | format_code }}</div>
{% if gift_card.expires_on %}
<p class="gift-exp">Expires on {{ gift_card.expires_on | date: '%B %d, %Y' }}</p>
{% endif %}
</div>
<a href="{{ shop.url }}" class="btn btn--primary">Start Shopping</a>
</div>
</div>
</div>